<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			position: relative;
			padding-left: 8em;
		}
		.label {
			position: absolute;
			left: 0;
		}
		.user {}
		.serial, .token, .offset {
			font-weight: bold;
		}
		.buttons {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<div>
			<span class="{style.label}">Username</span>
			<g:Label styleName="{style.user}" ui:field="user" />
		</div>
		<div>
			<span class="{style.label}">Serial</span>
			<g:TextBox styleName="{style.serial}" ui:field="serial" />
		</div>
		<div>
			<span class="{style.label}">Token</span>
			<g:TextBox styleName="{style.token}" ui:field="token" />
		</div>
		<div>
			<span class="{style.label}">Offset</span>
			<g:TextBox styleName="{style.offset}" ui:field="offset" />
		</div>
		<div class="{style.buttons}">
			<g:Button ui:field="update">Update</g:Button>
			<g:Button ui:field="sync">Sync</g:Button>
			<g:Button ui:field="generate">Generate</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 