<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.sfnelson.bma.client.UseExistingPanel.Style" field="style">
		.panel {
			position: relative;
			width: 100%;
			text-align: center;
			top: 50%;
			margin-top: -8em;
			background-color: #6c3;
			color: white;
			padding: 1em 0;
		}
		.serial {
			font-family: Courier, monospace;
			font-size: 32pt;
			border-radius: 0.5ex;
			width: 12em;
			text-align: center;
			margin: 0;
			margin-top: 0.5ex;
			padding: 0;
			border: none;
		}
		.secret {
			width: 25em;
			font-size: 24pt;
			font-family: Courier, monospace;
			border-radius: 0.5ex;
			text-align: center;
			margin: 0;
			padding: 0;
			border: none;
		}
		.error {
			background-color: #fcc;
		}
		.init {
			color: #ccc;
		}
		.submit {
			font-size: 32pt;
			font-family: Courier, monospace;
			padding: 0;
			border-radius: 0.5ex;
			background-color: white;
			border: none;
			margin: 0;
			margin-top: 0.5ex;
			margin-left: 1em;
			color: #ccc;
			display: inline-block;
			width: 6em;
			text-align: center;
			cursor: pointer;
		}
		.submit:hover {
			color: #ccc;
		}
		.ready {
			color: black;
		}
		.ready:hover {
			color: #777;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<div>
			<g:TextBox styleName="{style.secret}" ui:field="secret"></g:TextBox>
		</div>
		<div>
			<g:TextBox styleName="{style.serial}" ui:field="serial"></g:TextBox>
			<g:Anchor styleName="{style.submit}" ui:field="submit"></g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 